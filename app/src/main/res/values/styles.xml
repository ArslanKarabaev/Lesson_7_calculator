<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.btn" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="Gray.btn" parent="Base.btn" >
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Orange.btn" parent="Base.btn">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Dark.Gray.btn" parent="Base.btn">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>